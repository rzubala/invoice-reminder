<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppAlertDialogContent"
        parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InvoiceLabelStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="InvoiceLabelAmountStyle" parent="InvoiceLabelStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InvoiceListStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="InvoiceAmountListStyle" parent="InvoiceListStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InvoiceCurrencyListStyle" parent="InvoiceListStyle">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="InvoiceDateListStyle" parent="InvoiceListStyle">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="InvoiceDescriptionListStyle" parent="InvoiceListStyle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TodayInvoiceListStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="TodayInvoiceAmountListStyle" parent="InvoiceListStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="TodayInvoiceCurrencyListStyle" parent="InvoiceListStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="TodayInvoiceDateListStyle" parent="InvoiceListStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="TodayInvoiceDescriptionListStyle" parent="InvoiceListStyle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
